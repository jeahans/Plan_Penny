<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jeanette.planpenny.Fragments.CalendarDayFragment"
    android:background="@drawable/transparentbackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/MainColor"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >
            <TextView
                android:id="@+id/previousDay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/MainColor"
                android:gravity="center_horizontal"
                android:text="&lt;&lt;"
                android:clickable="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewMonth"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/MainColor"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/previousDay"

            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/textViewMonth"
            >
            <TextView
                android:id="@+id/nextDay"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/MainColor"
                android:gravity="center_horizontal"
                android:text=">>"
                android:clickable="true"
                />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fragment Calender Day"
        android:id="@+id/textView5"
        android:layout_gravity="left|center_vertical" />

</FrameLayout>
