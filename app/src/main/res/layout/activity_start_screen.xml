<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/PlanPenny"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jeanette.planpenny.StartScreen"
    android:id="@+id/container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <Button
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Tasks"
            android:id="@+id/buttonTasks"
            android:layout_gravity="center_horizontal" />

        <Button
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Projects"
            android:id="@+id/buttonProjects"
            android:layout_gravity="center_horizontal" />
            

        <Button
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Calendar"
            android:id="@+id/buttonCalendar"
            android:layout_gravity="center_horizontal" />

        <Button
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Clipboard"
            android:id="@+id/buttonClipboard"
            android:layout_gravity="center_horizontal" />

        <Button
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Categories"
            android:id="@+id/buttonCategories"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
